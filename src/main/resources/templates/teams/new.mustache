<div class="team-container">
    <div class="topbar">
        <a class="btn" href="/teams/home">← 팀 목록으로 돌아가기</a>
        <a class="btn" href="/main">홈화면</a>
    </div>

    <div class="card">
        <h2 class="title">팀 등록하기</h2>

        <form action="/teams/save" method="post" enctype="multipart/form-data" class="form">
            <div class="field">
                <label class="label">종목 <span class="req">*</span></label>
                <select name="sportId" required class="input">
                    <option value="">종목 선택</option>
                    {{#sports}}
                        <option value="{{sportId}}">{{sportName}}</option>
                    {{/sports}}
                </select>
            </div>

            <div class="field">
                <label class="label">팀 이름 <span class="req">*</span></label>
                <input type="text" name="teamName" required class="input" placeholder="예) 천안 위너스">
            </div>

            <div class="field">
                <label class="label">최대 인원 <span class="req">*</span></label>
                <input type="number" name="maxMembers" min="1" required class="input" placeholder="예) 20">
            </div>
            <div class="field">
                <label class="label">현재 인원</label>
                <input type="number" name="currentMembers" min="0" value="0" class="input">
            </div>

            <div class="field full">
                <label class="label">지역 <span class="req">*</span></label>
                <div class="segmented">
                    <label class="chip">
                        <input type="radio" name="regionName" value="천안시 동남구" required>
                        <span>천안시 동남구</span>
                    </label>
                    <label class="chip">
                        <input type="radio" name="regionName" value="천안시 서북구" required>
                        <span>천안시 서북구</span>
                    </label>
                </div>
            </div>

            <div class="field">
                <label class="label">주 경기 요일 <span class="req">*</span></label>
                <select name="gameDay" required class="input">
                    <option value="">선택</option>
                    <option value="mon">월</option>
                    <option value="tue">화</option>
                    <option value="wed">수</option>
                    <option value="thu">목</option>
                    <option value="fri">금</option>
                    <option value="sat">토</option>
                    <option value="sun">일</option>
                </select>
            </div>

            <div class="field">
                <label class="label">팀 로고</label>
                <input type="file" name="imageFile" accept="image/*">
            </div>

            <div class="field full">
                <label class="label">소개</label>
                <textarea name="teamDescription" rows="5" class="textarea" placeholder="팀 소개를 입력하세요"></textarea>
            </div>

            <div class="actions full">
                <button type="submit" class="btn primary" align="center">등록하기</button>
            </div>
        </form>
    </div>
</div>

