<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Calendar Logic (기존 코드)
    const calendarDates = document.getElementById('calendar-dates');
    const currentMonthYear = document.getElementById('currentMonthYear');
    let currentDate = new Date();

    // ★ 수정: 기존 renderCalendar 함수는 paintMarkers를 호출하도록 변경됩니다.
    function renderCalendar() {
        calendarDates.innerHTML = '';
        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();

        currentMonthYear.textContent = `${year}년 ${month + 1}월`;

        const firstDay = new Date(year, month, 1).getDay();
        const lastDate = new Date(year, month + 1, 0).getDate();

        for (let i = 0; i < firstDay; i++) {
            const emptyDiv = document.createElement('div');
            calendarDates.appendChild(emptyDiv);
        }

        for (let i = 1; i <= lastDate; i++) {
            const dateDiv = document.createElement('div');
            dateDiv.textContent = i;
            dateDiv.classList.add('calendar-date');

            const today = new Date();
            if (i === today.getDate() && month === today.getMonth() && year === today.getFullYear()) {
                dateDiv.classList.add('today');
            }

            calendarDates.appendChild(dateDiv);
        }

        paintMarkers(); // 달력 렌더링 후 마커 추가
    }

    function prevMonth() {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar();
    }

    function nextMonth() {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar();
    }

    renderCalendar();


    // ===== ★ 추가: 일정 토글/마커 스크립트 =====

    // 1) JSON 파싱
    let MY = [], ALL = [];
    try {
        const rawMy = document.getElementById('my-matches-json')?.textContent?.trim();
        const rawAll = document.getElementById('all-matches-json')?.textContent?.trim();
        MY = rawMy ? JSON.parse(rawMy) : [];
        ALL = rawAll ? JSON.parse(rawAll) : [];
    } catch (_) {
    }

    // 2) 날짜별 묶기
    function toMapByDate(arr) {
        const map = {};
        for (const m of arr || []) {
            const d = m.date; // "YYYY-MM-DD"
            if (!d) continue;
            (map[d] ||= []).push(m);
        }
        return map;
    }

    let MAP_MY = toMapByDate(MY);
    let MAP_ALL = toMapByDate(ALL);

    // 3) 현재 선택 (기본: 전체)
    let viewMode = 'all'; // 'mine' | 'all'
    const colorMap = {
        '축구': '#38a169',
        '농구': '#f6ad55',
        '야구': '#2b6cb0',
        '테니스': '#68d391'
    };


    // 4) 마커 재도색 함수
    function paintMarkers() {
        const grid = document.getElementById('calendar-dates');
        if (!grid) return;

        // 기존 마커 제거
        grid.querySelectorAll('.event-dots-container').forEach(n => n.remove());

        // 현재 달
        const y = currentDate.getFullYear();
        const m = currentDate.getMonth();

        // 날짜 칸을 순회하며 마커 추가
        grid.querySelectorAll('.calendar-date').forEach(el => {
            const day = parseInt(el.textContent.trim(), 10);
            if (!day) return;
            const key = `${y}-${String(m + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
            const bucket = (viewMode === 'mine' ? MAP_MY : MAP_ALL)[key];

            if (bucket && bucket.length > 0) {
                const dotsContainer = document.createElement('div');
                dotsContainer.className = 'event-dots-container';

                // 여러 경기 표시
                bucket.forEach(event => {
                    const dot = document.createElement('span');
                    dot.className = 'event-dot';
                    const sportName = event.title.split(' ')[0];
                    dot.style.backgroundColor = colorMap[sportName] || '#667eea'; // 기본 색상
                    dot.title = event.title; // 툴팁에 제목 표시
                    dot.addEventListener('click', (e) => {
                        e.stopPropagation(); // 부모 클릭 이벤트 방지
                        if (event?.id) location.href = `/match/${event.id}`;
                    });
                    dotsContainer.appendChild(dot);
                });

                el.appendChild(dotsContainer);
            }
        });
    }

    // 5) 토글 버튼 이벤트
    const btnMine = document.getElementById('btnViewMine');
    const btnAll = document.getElementById('btnViewAll');

    function setView(mode) {
        viewMode = mode;
        if (btnMine && btnAll) {
            if (mode === 'mine') {
                btnMine.classList.remove('btn-outline-primary');
                btnMine.classList.add('btn-primary');
                btnAll.classList.remove('btn-primary');
                btnAll.classList.add('btn-outline-primary');
            } else {
                btnAll.classList.remove('btn-outline-primary');
                btnAll.classList.add('btn-primary');
                btnMine.classList.remove('btn-primary');
                btnMine.classList.add('btn-outline-primary');
            }
        }
        paintMarkers();
    }

    btnMine?.addEventListener('click', () => setView('mine'));
    btnAll?.addEventListener('click', () => setView('all'));

    // 기본값: 전체 보기
    setView('all');
</script>
