<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>매치 통계 - KDT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .stats-card {
            border-left: 4px solid #007bff;
            transition: transform 0.2s;
        }
        .stats-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .chart-container {
            position: relative;
            height: 400px;
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col">
                <h2><i class="fas fa-chart-bar"></i> 매치 통계</h2>
                <p class="text-muted">스포츠별, 지역별, 상태별 매치 현황을 확인해보세요</p>
            </div>
            <div class="col-auto">
                <a href="/match/list" class="btn btn-outline-primary">
                    <i class="fas fa-futbol"></i> 매치 목록
                </a>
                <a href="/match/venues" class="btn btn-outline-info">
                    <i class="fas fa-map-marker-alt"></i> 구장 목록
                </a>
            </div>
        </div>

        <!-- 전체 통계 요약 -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card stats-card bg-primary text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-futbol fa-3x mb-3"></i>
                        <h3 class="card-title">{{stats.totalMatches}}</h3>
                        <p class="card-text">전체 매치</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card bg-success text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-3x mb-3"></i>
                        <h3 class="card-title">{{#stats.matchesByStatus.OPEN}}{{stats.matchesByStatus.OPEN}}{{/stats.matchesByStatus.OPEN}}{{^stats.matchesByStatus.OPEN}}0{{/stats.matchesByStatus.OPEN}}</h3>
                        <p class="card-text">모집중</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card bg-warning text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-map-marker-alt fa-3x mb-3"></i>
                        <h3 class="card-title">{{#stats.matchesByRegion}}{{stats.matchesByRegion.size}}{{/stats.matchesByRegion}}{{^stats.matchesByRegion}}0{{/stats.matchesByRegion}}</h3>
                        <p class="card-text">활성 지역</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stats-card bg-info text-white">
                    <div class="card-body text-center">
                        <i class="fas fa-running fa-3x mb-3"></i>
                        <h3 class="card-title">{{#stats.matchesBySport}}{{stats.matchesBySport.size}}{{/stats.matchesBySport}}{{^stats.matchesBySport}}0{{/stats.matchesBySport}}</h3>
                        <p class="card-text">스포츠 종목</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- 스포츠별 매치 분포 -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-pie"></i> 스포츠별 매치 분포
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="sportChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 지역별 매치 분포 -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-bar"></i> 지역별 매치 분포
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="regionChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 상세 통계 테이블 -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-table"></i> 상세 통계
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- 스포츠별 통계 -->
                            <div class="col-md-6">
                                <h6>스포츠별 매치 수</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>스포츠</th>
                                                <th>매치 수</th>
                                                <th>비율</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#stats.matchesBySport}}
                                            <tr>
                                                <td>{{@key}}</td>
                                                <td>{{@value}}</td>
                                                <td>
                                                    <div class="progress" style="height: 20px;">
                                                        <div class="progress-bar" role="progressbar" 
                                                             style="width: {{@value}}%"
                                                             aria-valuenow="{{@value}}" 
                                                             aria-valuemin="0" aria-valuemax="{{stats.totalMatches}}">
                                                            {{@value}}%
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/stats.matchesBySport}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- 지역별 통계 -->
                            <div class="col-md-6">
                                <h6>지역별 매치 수</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>지역</th>
                                                <th>매치 수</th>
                                                <th>비율</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#stats.matchesByRegion}}
                                            <tr>
                                                <td>{{@key}}</td>
                                                <td>{{@value}}</td>
                                                <td>
                                                    <div class="progress" style="height: 20px;">
                                                        <div class="progress-bar bg-success" role="progressbar" 
                                                             style="width: {{@value}}%"
                                                             aria-valuenow="{{@value}}" 
                                                             aria-valuemin="0" aria-valuemax="{{stats.totalMatches}}">
                                                            {{@value}}%
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/stats.matchesByRegion}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 스포츠별 차트
        const sportCtx = document.getElementById('sportChart').getContext('2d');
        const sportChart = new Chart(sportCtx, {
            type: 'doughnut',
            data: {
                labels: [{{#stats.matchesBySport}}'{{@key}}'{{^@last}},{{/@last}}{{/stats.matchesBySport}}],
                datasets: [{
                    data: [{{#stats.matchesBySport}}{{@value}}{{^@last}},{{/@last}}{{/stats.matchesBySport}}],
                    backgroundColor: [
                        '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                        '#9966FF', '#FF9F40', '#FF6384', '#C9CBCF'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // 지역별 차트
        const regionCtx = document.getElementById('regionChart').getContext('2d');
        const regionChart = new Chart(regionCtx, {
            type: 'bar',
            data: {
                labels: [{{#stats.matchesByRegion}}'{{@key}}'{{^@last}},{{/@last}}{{/stats.matchesByRegion}}],
                datasets: [{
                    label: '매치 수',
                    data: [{{#stats.matchesByRegion}}{{@value}}{{^@last}},{{/@last}}{{/stats.matchesByRegion}}],
                    backgroundColor: '#36A2EB',
                    borderColor: '#2693e6',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
</body>
</html>
