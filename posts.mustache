<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1.0"/>
    <title>게시글 관리</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <style>
        .sidebar{min-height:100vh;background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);}
        .sidebar .nav-link{color:rgba(255,255,255,.8);padding:15px 20px;border-radius:8px;margin:5px 0;transition:all .3s;}
        .sidebar .nav-link:hover{color:#fff;background:rgba(255,255,255,.1);}
        .sidebar .nav-link.active{background:rgba(255,255,255,.2);color:#fff;}
        .main-content{background-color:#f8f9fa;}
        .card{border:none;border-radius:15px;box-shadow:0 0.125rem 0.25rem rgba(0,0,0,.075);}
        .table{background:#fff;border-radius:10px;overflow:hidden;}
        .search-box{background:#fff;border-radius:10px;padding:20px;margin-bottom:20px;}
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4"><h4 class="text-white"><i class="fas fa-shield-alt"></i> 관리자 패널</h4></div>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link" href="/admin"><i class="fas fa-tachometer-alt me-2"></i>대시보드</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/admin/posts"><i class="fas fa-comments me-2"></i>게시글 관리</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/users"><i class="fas fa-users me-2"></i>사용자 관리</a></li>
                </ul>
            </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">게시글 관리</h1>
                <div class="btn-group">
                    <a href="/" class="btn btn-outline-secondary btn-sm"><i class="fas fa-home me-1"></i>홈으로</a>
                    <form action="/logout" method="post" style="display:inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm"><i class="fas fa-sign-out-alt me-1"></i>로그아웃</button>
                    </form>
                </div>
            </div>

            {{#successMessage}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i><span>{{.}}</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {{/successMessage}}

            {{#errorMessage}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i><span>{{.}}</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {{/errorMessage}}

            <div class="search-box">
                <div class="row">
                    <div class="col-md-6">
                        <form action="/admin/posts/search" method="get" class="d-flex">
                            <input type="text" name="keyword" class="form-control me-2" placeholder="제목 또는 내용으로 검색..." value="{{keyword}}"/>
                            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> 검색</button>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <form action="/admin/posts/search/username" method="get" class="d-flex">
                            <input type="text" name="username" class="form-control me-2" placeholder="작성자로 검색..." value="{{username}}"/>
                            <button type="submit" class="btn btn-primary"><i class="fas fa-user"></i> 작성자 검색</button>
                        </form>
                    </div>
                </div>
            </div>



            <!-- 커뮤니티 게시글 -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-comments me-2"></i>커뮤니티 게시글
                        <span class="badge bg-light text-dark ms-2">{{#communityPosts}}{{communityPosts.size}}{{/communityPosts}}{{^communityPosts}}0{{/communityPosts}}</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-primary text-white">
                            <tr><th>ID</th><th>제목</th><th>작성자</th><th>작성일</th><th>수정일</th><th>관리</th></tr>
                            </thead>
                            <tbody>
                            {{#communityPosts}}
                                <tr>
                                    <td>{{postId}}</td>
                                    <td><strong>{{title}}</strong><br/><small class="text-muted">{{content}}</small></td>
                                    <td><span class="badge bg-secondary">{{#user}}{{nickname}}{{/user}}</span></td>
                                    <td>{{createdAt}}</td>
                                    <td>{{updatedAt}}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#communityPostModal{{postId}}">
                                                <i class="fas fa-eye"></i> 보기
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteCommunityPost({{postId}})">
                                                <i class="fas fa-trash"></i> 삭제
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {{/communityPosts}}
                            {{^communityPosts}}
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <i class="fas fa-comments fa-3x text-muted mb-3"></i><br/>
                                        <span class="text-muted">등록된 커뮤니티 게시글이 없습니다.</span>
                                    </td>
                                </tr>
                            {{/communityPosts}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- 내소개 게시글 -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0"><i class="fas fa-user-circle me-2"></i>내소개 게시글
                        <span class="badge bg-light text-dark ms-2">{{#myPosts}}{{myPosts.size}}{{/myPosts}}{{^myPosts}}0{{/myPosts}}</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-primary text-white">
                            <tr><th>ID</th><th>제목</th><th>작성자</th><th>작성일</th><th>수정일</th><th>관리</th></tr>
                            </thead>
                            <tbody>
                            {{#myPosts}}
                                <tr>
                                    <td>{{postId}}</td>
                                    <td><strong>{{title}}</strong><br/><small class="text-muted">{{content}}</small></td>
                                    <td><span class="badge bg-secondary">{{#user}}{{nickname}}{{/user}}</span></td>
                                    <td>{{createdAt}}</td>
                                    <td>{{updatedAt}}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#myPostModal{{postId}}">
                                                <i class="fas fa-eye"></i> 보기
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteMyPost({{postId}})">
                                                <i class="fas fa-trash"></i> 삭제
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            {{/myPosts}}
                            {{^myPosts}}
                                <tr>
                                    <td colspan="6" class="text-center py-4">
                                        <i class="fas fa-user-circle fa-3x text-muted mb-3"></i><br/>
                                        <span class="text-muted">등록된 내소개 게시글이 없습니다.</span>
                                    </td>
                                </tr>
                            {{/myPosts}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>



<!-- 커뮤니티 게시글 모달 -->
{{#communityPosts}}
    <div class="modal fade" id="communityPostModal{{postId}}" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="fas fa-comments me-2"></i>{{title}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6"><strong>작성자:</strong> <span>{{#user}}{{nickname}}{{/user}}</span></div>
                        <div class="col-md-6"><strong>작성일:</strong> <span>{{createdAt}}</span></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong>내용:</strong>
                            <div class="border rounded p-3 mt-2" style="background-color:#f8f9fa">
                                <pre style="white-space:pre-wrap;margin:0">{{content}}</pre>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
                    <button type="button" class="btn btn-danger" onclick="deleteCommunityPost({{postId}})">
                        <i class="fas fa-trash"></i> 삭제
                    </button>
                </div>
            </div>
        </div>
    </div>
{{/communityPosts}}

<!-- 내소개 게시글 모달 -->
{{#myPosts}}
    <div class="modal fade" id="myPostModal{{postId}}" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title"><i class="fas fa-user-circle me-2"></i>{{title}}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-6"><strong>작성자:</strong> <span>{{#user}}{{nickname}}{{/user}}</span></div>
                        <div class="col-md-6"><strong>작성일:</strong> <span>{{createdAt}}</span></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong>내용:</strong>
                            <div class="border rounded p-3 mt-2" style="background-color:#f8f9fa">
                                <pre style="white-space:pre-wrap;margin:0">{{content}}</pre>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
                    <button type="button" class="btn btn-danger" onclick="deleteMyPost({{postId}})">
                        <i class="fas fa-trash"></i> 삭제
                    </button>
                    <a href="/mypost/{{postId}}" class="btn btn-primary">
                        <i class="fas fa-external-link-alt"></i> 상세보기
                    </a>
                </div>
            </div>
        </div>
    </div>
{{/myPosts}}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
// 커뮤니티 게시글 삭제
function deleteCommunityPost(postId) {
    if (confirm('정말로 이 커뮤니티 게시글을 삭제하시겠습니까?')) {
        // AJAX로 삭제 요청
        fetch(`/admin/community-posts/${postId}/delete`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => {
            if (response.ok) {
                alert('커뮤니티 게시글이 삭제되었습니다.');
                location.reload();
            } else {
                alert('삭제 중 오류가 발생했습니다.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('삭제 중 오류가 발생했습니다.');
        });
    }
}

// 내소개 게시글 삭제
function deleteMyPost(postId) {
    if (confirm('정말로 이 내소개 게시글을 삭제하시겠습니까?')) {
        // AJAX로 삭제 요청
        fetch(`/admin/my-posts/${postId}/delete`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => {
            if (response.ok) {
                alert('내소개 게시글이 삭제되었습니다.');
                location.reload();
            } else {
                alert('삭제 중 오류가 발생했습니다.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('삭제 중 오류가 발생했습니다.');
        });
    }
}
</script>
</body>
</html>
